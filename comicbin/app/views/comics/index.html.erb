<% @comics.in_groups_of(4, false).each_with_index do |group, index| %>
  <div class="row">
    <% group.each do |comic| %>
      <div class='col-lg-3 test'>
          <%= link_to image_tag(comic.image_url, :class => "col-md-12"), "/comics/#{comic.id}", class:'img-responsive' "col-md-3"%>
      </div>
    <% end %>
  </div>
<% end %>
